exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id ff-theme-util
exec_always --no-startup-id fix_xcursor

#exec --no-startup-id wal -t -R; nohup sh ~/scripts/beautify.sh >/dev/null 2>&1 &
exec --no-startup-id i3-msg "workspace $ws1; exec urxvt -e bash -c 'neofetch && bash'" 
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id compton --config ~/.config/compton.conf
exec --no-startup-id xfce4-power-manager
exec --no-startup-id nm-applet
exec --no-startup-id pamac-tray
exec --no-startup-id clipit
exec --no-startup-id xautolock -time 10 -locker blurlock
#exec --no-startup-id sleep 2; sh ~/scripts/beautify.sh

# custom keymap stuff
exec --no-startup-id sh ~/scripts/keymap.sh

# }}}
